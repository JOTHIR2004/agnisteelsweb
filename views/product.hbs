      <script>
         document.addEventListener('DOMContentLoaded', function () {
            const productLinks = document.querySelectorAll('.prod a');

            productLinks.forEach(link => {
               link.addEventListener('click', function (event) {
                  event.preventDefault();
                  const amount = this.getAttribute('data-amount');
                  alert(`The amount of this product is: â‚¹${amount}`);

                  // Use a confirmation dialog for the redirect logic
                  if (confirm('Do you want to proceed to the product page?')) {
                     // Use the href attribute of the link for redirection
                     window.location.href = this.getAttribute('href');
                  } else {
